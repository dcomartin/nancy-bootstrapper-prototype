{
  "compilationOptions": {
    "warningsAsErrors": true
  },

  "dependencies": {
    "Microsoft.NETCore.Platforms": "1.0.1-*",
    "Nancy.Core": { "target": "project" },
    "xunit": "2.1.0"
  },

  "testRunner": "xunit",

  "commands": {
    "test": "xunit.runner.aspnet"
  },

  "frameworks": {
    "netstandardapp1.5": {
      "imports": [
        "dnxcore50",
        "portable-net451+win8"
      ],
      "dependencies": {
        "dotnet-test-xunit": "1.0.0-dev-*"
      }
    },
    "dnx451": {
      "dependencies": {
        "xunit.runner.aspnet": "2.0.0-aspnet-*"
      }
    },
    "net451": {
      "frameworkAssemblies": {
        "System.Runtime": {
          "version": "4.0.10.0",
          "type": "build"
        },
        "System.Threading.Tasks": {
          "version": "4.0.0.0",
          "type": "build"
        }
      }
    }
  }
}
